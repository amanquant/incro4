# vercel.json
"""
Vercel deployment configuration
"""
{
  "version": 2,
  "env": {
    "SUPABASE_URL": {
      "description": "Supabase project URL"
    },
    "SUPABASE_API_KEY": {
      "description": "Supabase anon API key"
    },
    "SUPABASE_SERVICE_KEY": {
      "description": "Supabase service role key (optional)"
    },
    "VERCEL_ENV": {
      "description": "Environment: development, preview, or production"
    }
  },
  "functions": {
    "api/**/*.py": {
      "runtime": "python@3.11",
      "memory": 1024,
      "maxDuration": 26,
      "includeFiles": "lib/**",
      "excludeFiles": "tests/**"
    }
  },
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "api/v1/routes.py",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/health",
      "dest": "api/v1/routes.py",
      "methods": ["GET"]
    }
  ]
}
